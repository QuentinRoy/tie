{
  "extends": [
    "schedule:weekends",
    "config:js-lib",
    ":automergeMinor",
    ":automergeBranchPush",
    ":semanticCommits",
    ":rebaseStalePrs",
    ":semanticCommitScopeDisabled"
  ],
  "packageRules": [
    {
      "packagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "packagePatterns": ["karma", "tape", "nyc"],
      "packageNames": ["tap-spec"],
      "groupName": "test"
    },
    {
      "packagePatterns": ["webpack"],
      "groupName": "webpack"
    },
    {
      "packagePatterns": ["babel"],
      "groupName": "babel"
    }
  ]
}
